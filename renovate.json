{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "automergeType": "branch",
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "updateTypes": ["patch"],
      "packageNames": ["^@types/"],
      "automergeType": "branch",
      "automerge": true
    }
  ]
}
